.trade-recent-pro
  overflow hidden
  width 299px
  height 100%
  background $trade-pro-model-bg
  border-left 1px solid $trade-pro-main-bg
  font-size 11px
  display flex
  flex-flow column nowrap
  .trade-recent-thead
    width 100%
    display flex
    flex 0 0 30px
    padding 10px 10px 0
    span
      font-size 11px
      color $trade-font-thead
      &:nth-of-type(1)
        width 40%
      &:nth-of-type(2)
        text-align center
        width 30%
      &:nth-of-type(3)
        text-align right
        width 30%
  #trade_recent_body
    width 100%
    height 100%
    flex 1 1 auto
    overflow hidden
    table
      width 280px
      tbody
        tr
          height 22px
          line-height 22px
          td
            color $trade-font-normal
            font-size 11px
            &:nth-of-type(1)
              width 40%
            &:nth-of-type(2)
              text-align center
              width 30%
            &:nth-of-type(3)
              text-align right
              width 30%
          .trade-pro-recent-sell
            color $trade-pro-sell-bg
          .trade-pro-recent-buy
            color $trade-pro-buy-bg
