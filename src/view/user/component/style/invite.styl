.user-invite-wrap
  .invite-link, .invite-info
    padding 40px 0 40px 24px
    border-bottom 1px solid rgba(0, 0, 0, 0.1)
  .invite-link
    input
      display block
      width 600px
      margin-bottom 20px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-size 14px
    button
      //width 84px
      height 40px
      padding 0 20px
      background $user-bg-main
      border 1px solid $user-border-btn
      color $user-font-btn2
      &.poster-btn
        margin-right 20px
        background $user-border-btn
        color $user-font-btn
  .invite-info
    div
      p
        &:nth-of-type(1)
          margin-bottom 20px
        span
          display inline-block
          width 155px
          font-size 14px
          color $user-font-inviteNormal
        b
          color $user-font-invite
          font-size 14px
  .invit-record
    padding 40px 0 40px 24px
    .table-con
      min-height 270px
    table
      //min-height 270px
      margin-bottom 30px
      thead
        th
          padding 0 85px 16px 0
          font-size 14px
          color $user-title-invite
          text-align left
      tbody
        td
          font-size 14px
          padding 0 85px 10px 0
          color $user-font-inviteNormal
      .nothing-tr
        text-align center
        img
          width 140px
          margin 30px 0 10px
        p
          font-size 14px
    .pagination-wrap
      justify-content flex-end
      margin-right 20px

.post-wrap
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  background rgba(0,0,0,0.3)
  z-index 999
  img
    position absolute
    height 80%
    top 0
    bottom 0
    left 0
    right 0
    margin auto auto
