.otc-order-item
	width 100%
	padding-bottom 20px
	background $colFFFF
	table
		width 100%
		thead
			tr
				height 36px
				background $otc-order-title-bg
				line-height 36px
				td
					font-size 12px
					color $otc-order-font-title
					&:nth-of-type(1)
						padding-left 24px
		tbody
			tr
				height 62px
				line-height 62px
				td
					font-size 14px
					color $otc-order-font-main
					&:nth-of-type(1)
						padding-left 24px
	.otc-order-confirm
		text-align right
		padding-right 24px
		.otc-order-value
			display flex
			justify-content flex-end
			height 42px
			&.order-confirm-reverse
				flex-direction row-reverse
				justify-content flex-start
		.exchange-value
			font-size 30px
			color $otc-order-price
			em
				font-size 14px
				color $otc-order-price
		img
			width 12px
			height 12px
			margin auto 20px
	p
		margin-top 20px
		font-size 14px
		color $otc-order-font-main
		em
			display inline-block
			cursor pointer
			width 12px
			height 12px
			background $otc-checkbox-normal no-repeat center
			background-size 12px 12px
			margin-right 10px
		.radio-select
			background $otc-checkbox-select no-repeat center
	.otc-order-button
		height 36px
		color $colFFFF
		padding 0 40px
		background $otc-order-active
		margin-top 10px
	.button-disable
		opacity .5
	