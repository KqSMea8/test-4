@import "./variable.styl"

.price-wrap
  width 1200px
  margin 0 auto

//padding 20px 0 68px
.price-nav
  width 190px
  height 760px
  background $help-bg-none
  &.nav-en
    li
      a
        padding-left 45px
  li
    position relative
    font-size 14px
    color $help-font-dark
    height 52px
    line-height 52px
    border-bottom 1px solid $help-border-list
    cursor pointer
    a
      display block
      width 100%
      height 100%
      font-size 14px
      color $help-font-dark
      padding-left 63px
      &.active,
      &:hover
        background $help-bg-coin-title-op
        font-weight bold
        &::before
          position absolute
          content ''
          width 6px
          height 100%
          left 0
          top 0
          background-color $help-bg-coin-title

.price-content
  float right
  width 1000px
  min-height 760px
  background-color $help-bg-none
  .price-title
    width 100%
    height 60px
    line-height 60px
    padding-left 24px
    margin-bottom 20px
    color $help-font-main
    background $help-bg-title
    span
      font-size 18px
  //	//margin-right .16rem
  //b
  //	font-size .16rem
  table
    width 952px
    border 1px solid $help-border-table
    border-radius 2px
    margin 0 auto 30px
    tr
      height 48px
      line-height 48px
      border-bottom 1px solid $help-border-table-normal
      color $help-font-dark
      text-align center
      font-size 14px
      th, td
        border-right 1px solid $help-border-table-normal
        font-size 14px
        img
          width 16px
          height 16px
          vertical-align middle
          margin 0 3px 0 0
    thead
      tr
        background $help-bg-tableHead
        color $help-font-tableHead

  // vip等级
  .level-gradeInfo
    color $help-font-content-minor
    font-size 14px
    letter-spacing 0.06px;
    line-height 28px
    margin-left 24px
    li
      font-size 14px

  .pircing-trade-content
    margin 0 auto
    width 952px
    li
      color $help-font-content-minor
      font-size 14px
      letter-spacing 0.06px
      line-height 28px
      &:last-child
        margin-top 30px

  .gradeInfo
    margin 0 auto
    width 952px
    li
      color $help-font-content-minor
      font-size 14px
      letter-spacing 0.06px
      line-height 28px
      &:last-child
        margin-bottom 30px
  // 提现
  .withdraw-table
    tbody
      tr
        td
          min-width 315px
          &:nth-of-type(1)
            padding-left 100px
            text-align left

	
	
