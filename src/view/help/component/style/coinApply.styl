@import "./variable.styl"

.apply-wrap
  width 1200px
  min-height 760px
  background $colFFFF
  h1
    width 100%
    height 60px
    line-height 60px
    padding-left 24px
    background $colF8F8
    color $col9E2F
    font-size 18px
  div
    margin 20px 24px
    display flex
    p
      font-size 14px
      color $col272D
    span
      font-size 14px
      color $col9E2F
  ul
    width 100%
    padding-left 24px
    li
      font-size 14px
      color $col272D
      list-style disc
      margin 0 0 10px 16px
      &:nth-of-type(1)
        list-style none
        margin 0 0 13px 0