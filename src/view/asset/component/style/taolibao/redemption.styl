.redemption-wrap
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background $asset-bg-tip
  .redemption
    position absolute
    left 50%
    top 50%
    width 560px
    min-height 489px
    padding 40px
    margin-left -280px
    margin-top -265px
    background $asset-bg-none
    box-shadow 0 2px 20px 10px $asset-bg-popup-shadow
    border-radius(6px)
    h3
      height 28px
      line-height 28px
      font-size 20px
      color $asset-font-normal
      font-weight bold
      letter-spacing 0
      img
        float right
        margin-top 6px
        cursor pointer
    .form
      padding-top 40px
      .detail
        margin-bottom 20px
        p
          height 20px
          line-height 20px
          margin-bottom 20px
          span
            float left
            font-size 14px
            color $asset-font-normal
            letter-spacing 0
          span:nth-child(1)
            min-width 96px
        .select
          position relative
          h4
            font-size 14px
            margin-bottom 10px
            span:nth-child(1)
              font-size 14px
              display inline-block
              min-width 96px
            a
              font-size 14px
              color $asset-font-main
              letter-spacing 0
          .select-button
            width 480px
            height 48px
            .base-list
              li
                height 48px
                p
                  height 48px
                  line-height 48px
            .main
              height 48px
              line-height 48px
              p
                height 48px
                line-height 48px
                color $asset-font-placeHolder
              &::after
                bottom 16px
                right 16px
              &.hidden
                &::after
                  bottom 18px
      .amount
        h4
          font-size 14px
          color $asset-font-normal
          letter-spacing 0
          margin-bottom 10px
        .redemption-input
          .err-children
            top -40px
            left 35%
          .input
            float left
          em
            float left
            margin 33px 0 0 10px
            font-size 14px
          i
            float right
            height 48px
            line-height 48px
            margin-right 16px
            font-size 14px
            color $asset-font-main
            letter-spacing 0
            text-align right
            cursor pointer
        .fee
          height 36px
          line-height 36px
          font-size 12px
          color $asset-font-negative
        .error
          input
            border-color $asset-border-negative
      .password
        margin-bottom 50px
        h4
          height 40px
          line-height 40px
          font-size 14px
          color $asset-font-normal
          letter-spacing 0
        input
          width 480px
          height 48px
          line-height 48px
          border-radius 2px
      button
        float right
        width 200px
        height 48px
        line-height 48px
        font-size 16px
        &.disable
          opacity 0.6