@import "../style/variable.styl"
.safePass-wrap
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  margin auto auto
  background $common-bg-popup-dark
  z-index 1000
  .safePass-content
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto auto
    width 560px
    height 324px
    padding 40px
    background $common-bg-none
    box-shadow 0 2px 20px 10px $common-bg-shadow-connect
    border-radius(6px)
    .safePass-content-title
      position relative
      margin-bottom 40px
      font-size 20px
      line-height 28px
      letter-spacing 0
      font-weight bold
      img
        position absolute
        right 0
        top 6px
        cursor pointer
    .password
      margin-bottom 50px
      p
        font-size 14px
        margin-bottom 10px
      input
        width 480px
        height 48px
        line-height 48px
        &.error
          border-color $common-border-negative
      span
        display block
        line-height 24px
        color $common-font-negative
    .safe-pass-button
      width 200px
      height 48px
      font-size 14px
      text-align center
      line-height 48px
      float right
      &.disable
        opacity 0.6