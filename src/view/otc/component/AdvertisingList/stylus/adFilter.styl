.ad-filter
	padding-left 30px
	p
		font-size 14px
		color $otc-font-main
		margin-bottom 10px
	.ad-filter-items
		display flex
		.ad-filter-limit
			width 144px
			height 36px
			border 1px solid $otc-border
			font-size 14px
			color $otc-font-input
			margin-right 10px
		.ad-filter-select
			padding 0 20px 0 8px
			height 36px
			border 1px solid $otc-border
			font-size 14px
			margin-right 10px
			p
				color $otc-font-input
		.ad-filter-select-d
			width 100px
		.ad-filter-search
			padding 0 14px
			margin 0 10px 0 25px
			background $otc-active
			color $colFFFF
		.ad-filter-reset
			padding 0 14px