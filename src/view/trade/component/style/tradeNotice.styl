.trade-notice-wrap
  h3
    width 100%
    height .4rem
    line-height .4rem
    background $trade-bg-title
    padding-left .17rem
    color $trade-font-title
    font-size .12rem
  .text-nothing
    padding .16rem .1rem
  ul
    width 100%
    overflow auto
    padding .16rem .1rem
    &::-webkit-scrollbar-button
      display none
    &::-webkit-scrollbar
      position relative
      width 3px
      height 100%
    &::-webkit-scrollbar-track
      width 3px
      background $trade-scrollbar-track
    &::-webkit-scrollbar-thumb
      width 3px
      background $trade-scrollbar-thumb
    li
      //height .35rem
      margin-bottom .16rem
      p
        margin-bottom .05rem
        a
          display block
          //height .12rem
          width 90%
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          font-size .12rem
          color $trade-font-normal
      span
        //height .12rem
        display block
        text-align right
        font-size .11rem
        color $trade-font-thead