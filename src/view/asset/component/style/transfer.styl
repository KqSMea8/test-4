.otc-transfer-wrap
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background $asset-bg-tip
  z-index 999
  .otc-transfer-content
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    width 560px
    height 547px
    padding 40px
    margin auto auto
    background $asset-bg-none
    box-shadow 0 2px 20px 10px $asset-bg-popup-shadow;
    border-radius(6px)
    p
      font-size 14px
      margin-bottom 10px
    .otc-transfer-title
      position relative
      margin-bottom 40px
      font-size 20px
      font-weight bold
      line-height 28px
      letter-spacing 0
      img
        position absolute
        right 0
        top 6px
        cursor pointer
    .select-button .main.hidden::after
      right 15px
      bottom 20px
    .select-button .main::after
      right 15px
      bottom 15px
    .base-list li
      height 48px
      line-height 48px
    .otc-transfer-coin
      margin-bottom 20px
      .select-button
        ul
          max-height 480px
          overflow hidden auto
          p
            margin 0
      .otc-transfer-select
        width 480px
        height 48px
        line-height 48px
    .otc-transfer-amount
      margin-bottom 20px
      .otc-transfer-input
        position relative
        margin-bottom 10px
        input
          width 480px
          height 48px
          line-height 48px
          padding-right 48px
        i
          position absolute
          top 16px
          right 14px
          font-size 14px
          color $asset-font-main
          letter-spacing 0
          cursor pointer
      span
        font-size 12px
        color $asset-font-negative
        letter-spacing 0
    .otc-transfer-dir
      .select-button
        float left
        .otc-transfer-select
          width 206px
          height 48px
          line-height 48px
      span
        float left
        width 68px
        line-height 48px
        font-size 14px
        text-align center
  button
    position absolute
    right 40px
    bottom 40px
    width 200px
    height 48px
    font-size 16px
    &.disable
      opacity 0.6

