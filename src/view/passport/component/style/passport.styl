@import "variable.styl"

.find-pass-wrap-con
  position relative
  width 100%
  padding 60px 0
.find-pass-wrap
  position relative
  transform translateX(-50%)
  left 50%
  width 1000px
  padding 57px 340px 60px 340px
  background $login-bg-findPass
  .err-children
    top -40px
  h1
    font-size 24px
    margin-bottom 40px
    color $login-font-normal
    text-align center
  .err-input
    border-color $login-line-err
  ul
    width 100%
    >li
      position relative
      margin-bottom 20px
      &:last-child
        margin-bottom 0
      p
        font-size 14px
        color $login-font-normal
        margin-bottom 10px
      input
        width 100%
        height 48px
      .pass-btn
        width 100%
        height 48px
        background $login-bg-active
        color $login-font-button
        opacity .5
        border none
      .can-click
        opacity 1
    .send-verify-li
      .send-verify-div
        position relative
      .send-code-btn
        position absolute
        right 14px
        top 14px
        border none
        font-size 14px
        color $login-font-notAllow
        &:hover
          background none
        &.can-click
          color $login-font-verify
        &.disabled-btn
          cursor not-allowed
          color $login-font-disable
    .pass-li
      position relative
    .send-picture-li
      .base-input-wrap
        float left
        input
          width 200px
          vertical-align top
          border-radius (2px 0 0 2px)
          border-right none
      img
        float left
        width 120px
        height 48px
        background $login-bg-img
        cursor pointer
        border-radius (0 2px 2px 0)
    .warn-li
      margin-bottom 30px
      font-size 14px
      color $login-font-warn
    .pwd-strength-li
      height auto
      margin -10px 0 10px
