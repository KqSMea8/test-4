@import "./variable.styl"

.footer-wrap
  width 100%
  //min-width 11.6rem
  background-color $footer-bg-main
  height 150px
  padding 40px 0 16px
  .footer-top-wrap
    border-bottom 1px solid $footer-line-main
  .footer-top
    width 1200px
    margin 0 auto
  ul
    float left
    text-align center
    padding-bottom 40px
    li
      display inline-block
      margin-right 24px
      a
        color $footer-font-nav
        font-weight 400
      a:hover
        color $footer-font-hover
    li:last-child
      margin-right 0
  ol
    float right
    text-align center
    li
      display inline-block
      margin-left 26px
      position relative
      img
        width 18px
      .wx-img:hover
        + .wx-qrCode
          display block
      .wx-img
        + .wx-qrCode
          display none
          width 100px
          height 100px
          background-image $footer-image-wechat
          background-color $footer-bg-weixin
          background-position center center
          background-size 1rem 1rem
          background-repeat no-repeat
          position absolute
          bottom 30px
          right -40px
          z-index 999
  p
    width 1200px
    margin 0 auto
    padding-top 16px
    font-size 12px
    color $footer-font-copyright

  .top-aside, .down-aside
    display none
    position fixed
    right 0
    bottom 280px
    width 56px
    height 168px
    background $footer-bg-slide
  .down-aside
    bottom 215px
    height 56px

  .aside-nav-top
    position fixed
    right 0
    bottom 215px
    width 56px
    height 56px
    display none
    background-color $footer-bg-slide
    background-image $foot-top-pro
    background-size 30px 35px
    background-position center
    background-repeat no-repeat
    cursor pointer
    border-radius 2px
    z-index 2
    &:hover
      background-color $footer-bg-slide-hover

  .aside-nav-desk
    display none
    position fixed
    right 0
    bottom 280px
    width 56px
    height 56px
    background $footer-bg-slide
    background-image $foot-service-pro
    background-position 17px 20px
    background-repeat no-repeat
    background-size 22px 20px
    cursor pointer
    border-radius 0 0 2px 2px
    z-index 2
    &:hover
      background-color $footer-bg-slide-hover

  .aside-nav-erweima, .aside-nav-app
    position fixed
    display none
    right 0
    bottom 336px
    width 56px
    height 56px
    background-color $footer-bg-slide
    background-image $foot-erweima-pro
    background-size 25px 29px
    background-position center
    background-repeat no-repeat
    cursor pointer
    border-radius 2px 2px 0 0
    z-index 2
    &:after
      position absolute
      bottom 0
      left 16px
      content ""
      width 24px
      height 1px
      background $footer-line-slide
    &:hover
      background-color $footer-bg-slide-hover
      .erweima
        display block
    .erweima
      position absolute
      display none
      right 65px
      top -70px
      //width 185px
      //height 140px
      padding 10px
      background-color $footer-bg-slide
      border-radius 4px
      text-align center
      box-shadow 0 0 10px 0 #E0E0E0
      &:before
        content ""
        width 0
        height 0
        border 6px solid $footer-bg-slide
        border-bottom 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid transparent
        position absolute
        top 50%
        transform translateY(-50%)
        right -10px
      img
        width 160px
        height 160px
        margin-bottom 4px
      span
        font-size 14px
        color $footer-font-service

  .aside-nav-app
    bottom 392px
    background-image $foot-app-pro
    .link-a
      display block
      width 100%
      height 100%

.footer-fixed
  position fixed
  bottom 0

#udesk_container
  display none