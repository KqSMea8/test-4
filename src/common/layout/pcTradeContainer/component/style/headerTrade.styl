@import "./variable.styl"
@import "~@/view/trade/component/style/tradeMarket.styl"
@import "~@/view/trade/component/style/tradePairDeal.styl"
.tradeNav
  width 100%
  height 50px
  //padding 0 30px
  background $header-bg-exchange
  display flex
  align-items center
  position relative
  .hide
    display none
  .login-out
    cursor pointer
  .trade-exchange
    flex 1 0 auto
  .trade-pro-market
    position absolute
    top 50px
    left 176px
    width 438px
    height 250px
    //display none
  >ul
    flex 0 1 145px
    li
      height 50px
      width 100%
      a
        color $header-font-nav
        font-size 14px
        font-weight 100
        &:hover
          color $header-font-hover
          font-weight: 500
      &.header-nav-active
        >a
          color $header-font-active
      &:last-child
        margin-right 0
      &.nav-logo
        border-right 1px solid $header-line-slice
        text-align center
        height 50px
        line-height 50px
        a
          display inline-block
          margin-top 15px
          width 85px
          height 20px
          background $header-image-trade no-repeat center / 85px 20px
      &.select-list
        position relative
        &:hover
          .select-router
            display block
          &:after
            position absolute
            top: 50%
            right -10px
            content: ''
            width 8px
            height 5px
            background-image $header-icon-select
            background-size cover
            transform translateY(-50%) rotate(180deg)

        &:after
          position absolute
          top: 50%
          right -10px
          content: ''
          width 8px
          height 5px
          background-image $header-icon-select
          background-size cover
          transform translateY(-50%)

        .select-router
          position absolute
          display none
          left -18px
          width 100px
          background $header-bg-exchange
          border 1px solid $header-line-exchange
          li
            width 100%
            height 40px
            line-height 40px
            text-align center
            margin-right 0
            &:nth-of-type(1)
              border-bottom 1px solid $header-line-exchange
            a
              display block
              width 100%
              height 100%
              padding 0
              font-weight 100
              &.children-active
                background $header-font-active
                color $header-font-hover
                &:hover
                  background $header-font-active
                  color $header-font-hover
              &:hover
                color $header-font-active
  >ol
    flex 1 0 auto
    margin-right 40px
    display flex
    justify-content flex-end
    >li
      float left
      color $header-font-nav
      height 50px
      line-height 50px
      font-size 14px
      &:nth-of-type(1)
        border-left 1px solid $header-line-slice
        padding-left 20px
      &.language-li // 语言
        &:hover
          .language-ul
            display block
          p
            color $header-font-activePro
            &:after
              position absolute
              top 50%
              right 0
              content ''
              width 8px
              height 5px
              background-image $header-icon-select-active
              background-size cover
        p
          position relative
          padding-right 15px
          cursor pointer
          text-align center
          &:after
            position absolute
            top 50%
            right 0
            content ''
            width 8px
            height 5px
            background-image $header-icon-select
            background-size cover
            transform translateY(-50%)
          span
            font-size 14px
            font-weight 400
        ul
          position absolute
          display none
          width 90px
          background $header-bg-exchange-select
          box-shadow  0 1px 5px 0 rgba(0,0,0,0.5)
          right 30px
          z-index 99
          li
            position relative
            height 34px
            line-height 34px
            text-align left
            cursor pointer
            padding 0 10px
            &:hover
              background $header-bg-exchange
              color $header-font-activePro
            span
              margin-right 5px
              font-size 14px
              font-weight 400
              color $header-font-exchange-select
            img
              position absolute
              top 50%
              transform translateY(-50%)
              right 7px
      &.login-li
        margin 0 30px 0 35px
        a, span
          font-size 14px
          font-weight 400
          color $header-font-nav
          cursor pointer
          &:hover
            color $header-font-activePro
      &.user-li
        position relative
        margin 0 18px 0 50px
        &:hover
          .login-ul
            display block
          p
            color $header-font-activePro
            &:after
              position absolute
              top 50%
              right 0
              content ''
              width 8px
              height 5px
              background-image $header-icon-select-active
              background-size cover
            &:before
              position absolute
              top 17px
              left 0
              content ''
              width 14px
              height 15.1px
              background-image $header-exchange-active
              background-size 100%
        p
          position relative
          cursor pointer
          text-align center
          font-size 14px
          font-weight 400
          padding-right 10px
          padding-left 20px
          &:after
            position absolute
            top 50%
            right 0
            content ''
            width 8px
            height 5px
            background-image $header-icon-select
            background-size cover
            transform translateY(-50%)
          &:before
            position absolute
            top 17px
            left 0
            content ''
            width 14px
            height 15.1px
            background-image $header-exchange
            background-size 100%
        ul
          position absolute
          left 50%
          transform translateX(-50%)
          display none
          width 100px
          background $header-bg-user-content
          box-shadow 0 1px 5px 0 rgba(0,0,0,0.50)
          z-index 9999
          &.en-ul
            width 150px
            li
              &.login-out
                padding 0 10px
              a
                padding 0 10px
          li
            height 40px
            line-height 40px
            text-align left
            color $header-font-li
            border-bottom 1px solid $header-line-exchange
            font-size 14px
            font-weight 400
            &.login-out
              padding 0 22px
            &:hover
              background $header-bg-user-contentActive
              color $header-font-user-contentActive
              a
                color $header-font-user-contentActive
            a
              display block
              width 100%
              padding 0 22px
              font-size 14px
              color $header-font-li
              font-weight 400

      //&.login-out-li
      //  margin-right 50px
      //  cursor pointer

// 其他地方登录弹窗
.other-login
  position absolute
  top 100%
  left 50%
  transform translateX(-50%)
  width 600px
  height 200px
  line-height 200px
  background $header-font-normal
  z-index 999
  border 1px solid $header-line
  border-radius 10px
  text-align center
  color $header-font-light
  p
    font-size 20px

