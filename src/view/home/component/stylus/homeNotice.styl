.home-notice-wrap-pro
  width 100%
  height 50px
  line-height 50px
  background $home-bg-notice
  .hide
    display none
  .home-notice-content
    width 100%
    height 50px
    line-height 50px
    ul
      display -webkit-flex
      display flex
      justify-content space-around
      width 1200px
      margin 0 auto
      li
        a
          display block
          max-width 350px
          color $home-font-normal
          overflow hidden
          white-space nowrap
          text-overflow ellipsis
          &:hover
            color $home-font-noticeConActive
        &.more-li
          a
            position relative
            display inline
            &:hover
              &:after
                position absolute
                top 3px
                right -20px
                width 16px
                height 10px
                content ''
                background $home-notice-more-active no-repeat
                background-size 16px 10px
            &:after
              position absolute
              top 3px
              right -20px
              width 16px
              height 10px
              content ''
              background $home-notice-more no-repeat
              background-size 16px 10px



