  .trade-market-thead
    padding 10px 0 11px 0
    span
      position relative
      display inline-block
      font-size 12px
      img
        position absolute
      &.sort-img-td
        b
          color $trade-font-thead
        img,
        b
          cursor pointer
      &:nth-child(1)
        padding-left 28px
      &:nth-child(3)
        min-width 70px
        padding-right 5px
        text-align right
      &:nth-child(4)
        min-width 75px
        padding-right 10px
        text-align right
  .trade-market-table
    width 100%
    //thead
    //  tr
    //    td:first-children
    //      padding-left 28px
    //  .sort-img-td
    //    cursor pointer
    //  td
    //    font-size 12px
    //    color $trade-font-thead
    //    padding 6px 0 11px
    //    img
    //      position relative
    //      width 10px
    tbody
      tr
        height 22px
        margin-bottom 5px
        line-height 22px
        color $trade-font-normal
        &.nothing-market-pair
          td
            &:last-child
              font-size 14px
              text-align center
        td
          font-size 11px
          .favorite-img
            width 10px
            height 10px
            margin-right 8px
          &:first-child
            padding-left 10px
          &:last-child
            min-width 75px
            padding-right 10px
            text-align right
          //&:nth-children(2)
          //  min-width 66px
          &:nth-child(3)
            min-width 70px
            text-align right
          &.up-td
            color $trade-change-positive
          &.down-td
            color $trade-change-negative
      .pair-items-active
        background $trade-pro-market-bg-active
      .market-up
        color $trade-change-positive
      .market-down
        color $trade-change-negative

