.range-wrap
    width 100%
    padding 15px 0 20px
    background-color $common-bg-none
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
  .range-groove
    position relative
    height 4px
    background-color $common-bg-progress
    cursor pointer
    &.marks
      margin-bottom 15px
    border-radius(10px)
    .range-groove-active
      position absolute
      height 100%
      left 0
      border-radius(10px)
    .range-groove-drag
      position absolute
      width 100%
      height 100%
      left 0
    b, .range-block
      position absolute
      top 50%
      transform translateX(-50%) translateY(-50%)
      -ms-transform translateX(-50%) translateY(-50%)
      -moz-transform translateX(-50%) translateY(-50%)
      -webkit-transform translateX(-50%) translateY(-50%)
      -o-transform translateX(-50%) translateY(-50%)
      width 14px
      height 14px
      border-radius(50%)
      background-color $common-bg-progress
      z-index 99
    b.active
      background-color $common-bg-pwd-middle
    .range-block
      border 2px solid
      background-color $common-bg-none
      i
        position absolute
        top -300%
        left 50%
        transform translateX(-50%) translateY(-50%)
        -ms-transform translateX(-50%) translateY(-50%)
        -moz-transform translateX(-50%) translateY(-50%)
        -webkit-transform translateX(-50%) translateY(-50%)
        -o-transform translateX(-50%) translateY(-50%)
        min-width 57px
        min-height 32px
        line-height 32px
        text-align center
        background $common-bg-popup
        border-radius 2px
        font-size 12px
        color $common-bg-none
        letter-spacing 0
        &::after
          position absolute
          bottom -8px
          left 50%
          transform translateX(-50%)
          -ms-transform translateX(-50%)
          -moz-transform translateX(-50%)
          -webkit-transform translateX(-50%)
          -o-transform translateX(-50%)
          content ''
          border-top 8px solid $common-bg-popup
          border-left 8px solid transparent
          border-right 8px solid transparent
  .range-title
    position relative
    li
      position absolute
      top 50%
      transform translateX(-50%) translateY(-50%)
      -ms-transform translateX(-50%) translateY(-50%)
      -moz-transform translateX(-50%) translateY(-50%)
      -webkit-transform translateX(-50%) translateY(-50%)
      -o-transform translateX(-50%) translateY(-50%)