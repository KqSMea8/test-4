// @import "../../../../common/css/variable.styl"
  .asset-popup
    display flex
    justify-content center
    align-items center
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    background $asset-bg-tip
    z-index 999
    a
      color $asset-font-main
      text-decoration underline
      cursor pointer
      // &:hover
      //   color $asset-font-main-hover
      // &:active
      //   color $asset-font-main-active
    .asset-popup-content
      position relative
      .close
        position absolute
        top 46px
        right 40px
        cursor pointer
      &.base3
        width 560px
        padding 40px
        border-radius(0.06*100px)
        background $asset-bg-none
        box-shadow 0 2px 20px 10px rgba(25,31,46,0.20);
        h3
          font-size 0.2*100px
          padding-left 0
          margin-bottom 12px
          line-height 28px
          font-weight bold
          color $asset-font-normal
          background $asset-bg-none
          letter-spacing 0
          span
            float right
            height 36px
            padding 0 14px
            margin-right 56px
            line-height 36px
            font-size 14px
            color $asset-font-main
            border 1px solid $asset-border-main
            border-radius(2px)
            letter-spacing 0
            cursor pointer
        table.list
          thead
            font-size 14px
            letter-spacing 0
            color $asset-font-legal
            text-align left
            letter-spacing 0
            tr
              th
                width 52px
                font-size 14px
                height 0.31*100px
                &.name
                  width 98px
                &.base3-address
                  width 330px
          tbody
            tr
              &.input
                td
                  height 52px
                td:first-child
                  input
                    width 84px
                    height 36px
                td:nth-child(2)
                  position relative
                  input
                    width 244px
                    height 36px
                  .button
                    position absolute
                    right 10px
                    top 0
                    button
                      min-width 0.54*100px
                      height 36px
                td:nth-child(3)
                  button
                    min-width 0.54*100px
                    height 36px
                  button:first-child
                    margin-right 0.12*100px
              &.base3-content
                border-bottom 0.01*100px solid $asset-border-minor
                &.first
                  border-top 0.01*100px solid $asset-border-minor
                &:last-child
                  border-bottom 0
                td
                  height 0.52*100px
                  line-height 0.52*100px
                  font-size 0.14*100px
                  color $asset-font-normal
                  letter-spacing 0
                  p
                    font-size 14px
                    line-height 20px
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                td:first-child
                  width 98px
                  height 36px
                  p
                    width 74px
                td:nth-child(2)
                  width 330px
                  height 36px
                  word-break break-all
                  p
                    width 320px
                td:nth-child(3)
                  button
                    min-width 56px
                    height 0.28*100px
                    color $asset-font-negative
                    border-color $asset-border-negative
                    &:hover
                      color $asset-font-negative
                      border-color $asset-border-negative
                      background-color $asset-bg-none