@import "variable.styl"

.register-wrap-con
  padding 100px 0 90px
.register-wrap
  position relative
  left 50%
  transform translateX(-50%)
  width 560px
  padding 60px 120px
  background $login-bg-login
  .hide
    display none
  .err-children
    top -39px
  h1
    width 320px
    margin 0 auto
    padding 0 25px 20px
    border-bottom 2px solid $login-line-title
    margin-bottom 40px
    &.h1-en
      padding 0 35px 20px
    span
      padding 0 10px 16px
      font-size 20px
      color $register-font-nav
      cursor pointer
      &:first-child
        margin-right 65px
      &.active
        color $login-font-active
        border-bottom 2px solid $login-line-active
  ul
    >li
      width 320px
      height 48px
      margin-bottom 20px
      input
        width 320px
        height 48px
        border 1px solid $login-bg-code
      .err-input
        border 1px solid $login-line-err
    .register-btn-li
      margin-bottom 10px
      button
        width 320px
        height 48px
        background $login-bg-active
        color $login-font-button
        opacity .5
        border none
      .can-click
        opacity 1
    .send-code-li
      .send-code-div
        position relative
      .send-code-btn
        position absolute
        right 14px
        top 14px
        border none
        font-size 14px
        color $login-font-notAllow
        &.can-click
          color  $login-font-verify
        &:hover
          background none
        &.disabled-btn
          cursor not-allowed
          color $login-font-disable
    .pass-li
      position relative
    .go-login-li
      height auto
      margin-bottom 0
      text-align right
      font-size 14px
      a
        font-size 14px
        color $login-font-active
    .checkbox-li
      height auto
      color $login-font-remind
      margin-bottom 10px
      font-size 14px
      p
        display inline-block
        position relative
        top 2px
        margin-right 10px
        cursor pointer
        span
          display inline-block
          width 15px
          height 15px
          border 1px solid $login-bg-active
          border-radius 3px
        img
          width 15px
          height 15px
      .userAgree
        color $login-bg-active
        font-size 14px
    .pwd-strength-li
      height auto
      margin -10px 0 10px

.succ-popup-wrap
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0, 0, 0, .6)
  z-index 99
  .succ-con
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 285px
    height 350px
    background $act_regAndinvite-bg no-repeat
    background-size 285px 350px
    text-align center
    div
      width 235px
      padding 20px 20px 0
      margin 0 auto
      p
        font-size 18px
        margin-bottom 10px
        color $login-font-warn
        line-height 25px
      span
        display block
        font-size 16px
        margin-bottom 10px
        text-align left
      input
        width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        font-size 14px
    .btn-grounp
      position absolute
      bottom 20px
      button
        width 245px
        height 40px
        background $activity-bg-reg-btn
        color $login-font-button
        border-radius 100px
        font-size 16px
        cursor pointer
        &.copy-btn
          margin-bottom 10px

.post-wrap
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  background rgba(0,0,0,0.3)
  z-index 999
  img
    position absolute
    height 80%
    top 0
    bottom 0
    left 0
    right 0
    margin auto auto


