#trade-pro-market
  position relative
  z-index 9999
  width 438px
  //height 250px
  padding-bottom 15px
  background $trade-pro-market-bg-main
  color $trade-font-title
  box-shadow 0 1px 10px 0 rgba(6,13,30,0.50)
  .hide
    display none
  .trade-market-list
    height 34px
    border-bottom 1px solid $trade-pro-market-bg-title
    ul
      float left
      height 100%
      padding-left 10px
      li
        float left
        line-height 34px
        cursor pointer
        margin-right 16px
        font-size 14px
        color $trade-pro-market-font-title
        .optional-img
          width 10px
          height 10px
          margin-right 8px
      .trade-market-item-active
        color $trade-pro-tab-active-font

    .input-div
      float right
      height 22px
      margin-top 5px
      margin-right 10px
      background $trade-pro-market-bg-input
      img
        width 24px
        height 22px
        cursor pointer
        margin-left -2px
      input
        width 88px
        height 22px
        vertical-align top
        font-size 12px
        cursor pointer
        padding-left 5px
        border 1px solid $trade-pro-market-border-input
        color $trade-pro-market-border-input

  //.scroll-bar
