.fund-detail-product
  width 100%
  height 100%
  .product-intro
    height 72px
    margin 20px 0 40px
    position relative
    .product-intro-hr
      position absolute
      top 30px
      left 100px
      width 720px
      border none
      border-top 1px dashed $fund-product-hr
      z-index 1
      &.en-hr
        top 38px
    ul
      position absolute
      z-index 10
      width 720px
      height 72px
      display flex
      margin-left 100px
      align-items center
      justify-content space-between
      &.en-ul
        height 85px
        li
          height 85px
          line-height 65px
          &:last-child
            line-height 30px
      li
        position relative
        width 120px
        height 72px
        text-align center
        line-height 52px
        border 1px solid $fund-product-hr
        border-radius: 4px;
        font-size: 14px;
        padding 10px 0
        color $fund-detail-font-main
        z-index 10
        background $fund-detail-bg
        span
          margin-bottom 5px
          display block
          width 120px
          height 20px
          font-size: 14px;
          color $fund-detail-font-main
          line-height 20px
          text-align center

  table
    width 1120px
    margin 20px auto 0
    tr
      width 100%
      height 48px
      line-height 48px
      td
        width 206px
        padding-left 40px
        background rgb(248, 248, 248)
        border 1px solid $fund-detail-navLine
        font-size 14px
        color $fund-detail-font-item
        &:nth-of-type(2)
          width 745px
          background $fund-detail-bg
          color $fund-detail-font-main
  .fund-product-intro
    margin-top 16px
    margin-left 14px
    ul
      li
        font-size 14px
        color $fund-detail-font-main
        margin-bottom 10px
        height 20px
        line-height 20px
  .fund-manager-intro
    margin 15px 0 0 14px
    width 1000px
    p
      font-size 14px
      color $fund-detail-font-main
      text-indent 25px
      margin-bottom 10px
      line-height 22px