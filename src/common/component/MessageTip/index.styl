@import "../style/variable.styl"
  .message-tip
    position fixed
    right 20px
    bottom 20px
    padding 24px
    background $common-bg-none
    box-shadow 0 2px 20px 0 $common-bg-shadow-connect;
    border-radius(10px)
    z-index 9999
    &.none
      display none
    p
      position relative
      span
        font-size 16px
        padding 0 30px 0 32px
        color $common-font-normal
        letter-spacing 0
        cursor pointer
      &::after
        position absolute
        left 0
        top -1px
        width 22px
        height 19px
        content ''
        background $otc_newchat no-repeat;
        background-size 100% auto
      img
        position absolute
        right 0
        top 0
        cursor pointer