.earnings-wrap
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background $asset-bg-tip
  .earnings
    position absolute
    left 50%
    top 50%
    width 560px
    height 618px
    padding 40px 40px 20px 30px
    margin-left -280px
    margin-top -309px
    background $asset-bg-none
    box-shadow 0 2px 20px 10px $asset-bg-popup-shadow
    border-radius(6px)
    h3
      height 28px
      line-height 28px
      font-size 20px
      text-indent 10px
      color $asset-font-normal
      margin-bottom 24px
      font-weight bold
      letter-spacing 0
      span
        float right
        margin-right 40px
        font-size 14px
        letter-spacing 0
        i
          font-size 14px
          color $asset-font-negative
      img
        float right
        margin-top 6px
        cursor pointer
    .earnings-list
      width 480px
      tr
        border-bottom 1px solid $asset-bg-minor
      th,td
        height 52px
        padding-left 10px
        font-size 14px
        text-align left
        color $asset-font-normal
        line-height 52px
      th:nth-child(2), td:nth-child(2)
        padding-left 0
      th
        color $asset-font-legal
        letter-spacing 0
      th:nth-child(1)
        width 309px
      tr.empty
        border-bottom none
        td
          position relative
          width 480px
          height 400px
          background $empty-white no-repeat center center
          p
            top 50%
            left 0
            margin-top 40px
            width 100%
            position absolute
            line-height 32px
            text-align center

    .bottom
      position absolute
      bottom 0
      left 0
      width 100%
      height 76px
      box-shadow 0 5px 15px 2px $asset-bg-popup-shadow
      .pagination-wrap
        float right
        height 76px
        line-height 76px
        margin-top 20px
        margin-right 30px