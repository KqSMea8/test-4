@import "variable.styl"
.order-title
	height 60px
	display flex
	align-items center
	justify-content flex-end
	padding 0 24px
	line-height 60px
	background $order-title-bg
	img
		width 13px
		height 13px
		border-radius 2px
		margin-right 20px
		margin-top 27px
	h3
		color $order-line-active
		font-size 18px
	.filter-reset
		//margin-left 6.18rem
		display flex
		align-items center
		input
			margin-right .1rem
			position relative
			top -.01rem
			border-color $order-font-title
			background-color $order-bg-main
			-webkit-appearance radio
		span
			color $order-line-active
			font-size 14px
	.export-record
		margin-left 30px
.order-filter
	height 36px
	margin 20px 0
	display flex
	align-items center
	justify-content space-between
	padding 0 24px
	&.current
		//padding-right 40%
		.order-pair
			margin-right -400px
	span
		font-size 14px
		color $order-font-title
		margin-right 10px
	em
		margin 0 8px
		color $order-font-title
	.select
		width 100px
		height 36px
		line-height 36px
	.data-filter
		input
			margin-bottom 0
	.filter-handle
		button
			width 56px
			height 36px
			margin-right 10px
.order-detail-table
	width 100%
	td:nth-of-type(1)
		padding-left 24px
	thead
		tr
			height 36px
			line-height 36px
			background $order-title-bg
			td
				font-size 12px
				color $order-font-title
			td:last-child
				text-align: center
				padding-right 20px
	tbody
		tr
			height 60px
			line-height 60px
			border-bottom 1px solid $order-line
			td
				font-size 12px
				color $order-font-content
			td:last-child
				text-align: center
				padding-right 20px
.no-order-detail-list
	height 420px
	line-height 540px
	text-align center
	font-size 14px
	color $order-font-title
	letter-spacing 0
	background $empty-white no-repeat center / 140px 100px
.order-page
	justify-content: flex-end;
	display: flex;
	margin 20px 20px 20px 0
.history-order-detail
	background: rgba(0,0,0,.4);
	top: 0;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 8888;
	.history-order-detail-content
		min-width  560px
		max-height 618px
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		background $order-bg-main
		border-radius 6px
		padding 40px
		z-index 8889
		color $order-font-content
		.detail-content-title
			position relative
			h3
				font-size 20px
				color $order-font-content
			i
				cursor pointer
				position absolute
				width 16px
				height 16px
				right 0
				top 0
				background-image $order-image-close
		.content-info-thead
			display flex
			margin-top 40px
			width 100%
			height 36px
			span
				font-size 14px
				color $order-font-title
				&:nth-of-type(1)
					width 35%
				&:nth-of-type(2)
					width 22%
				&:nth-of-type(3)
					width 21%
				&:nth-of-type(4)
					width 22%
		#content_info_table_tbody
			width 100%
			overflow hidden
			table
				width 100%
				tr
					height 52px
					line-height 52px
					border-top 1px solid $order-line
					td
						font-size 14px
						color $order-font-content
						&:nth-of-type(1)
							width 35%
						&:nth-of-type(2)
							width 22%
						&:nth-of-type(3)
							width 21%
						&:nth-of-type(4)
							width 22%
