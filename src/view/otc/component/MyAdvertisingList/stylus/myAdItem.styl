.my-ad-list
	width 100%
	background $colFFFF
	padding 20px 24px 0
	.my-ad-items
		width 100%
		height 112px
		border 1px solid $otc-myAd-border
		margin-bottom 10px
		ul
			display flex
			align-items center
			.my-ad-li
				.ad-title-lab
					font-size 12px
					color $otc-myAd-font-intro
				.ad-title-content
					font-size 14px
					color $otc-myAd-font-main
				&:nth-of-type(1)
					width 200px
					padding-left 20px
				&:nth-of-type(2)
					width 190px
				&:nth-of-type(3)
					width 189px
				&:nth-of-type(4)
					width 174px
				&:nth-of-type(5)
					width 253px
		.my-ad-title
			height 36px
			background $otc-myAd-title-bg
			align-items center
			.my-ad-li
				&:nth-of-type(1)
					width 390px
		.my-ad-content
			height 75px
			align-items center
			li
				font-size 14px
				color $otc-myAd-font-main
				.ad-status-lab
					font-size 14px
					color $otc-myAd-font-main
					font-weight 600
					margin-right 60px
				em
					font-size 14px
					color $otc-myAd-font-main
					margin-right 20px
					cursor pointer
				.ad-radio-select:before
					display inline-block
					content ''
					width 14px
					height 14px
					background $otc-radio-select
					margin-right 6px
				.ad-radio-normal:before
					display inline-block
					content ''
					width 14px
					height 14px
					background $otc-radio-normal
					margin-right 6px
				.ad-content-button
					height 36px
					padding 0 14px
					border 1px solid $otc-myAd-border
					color $otc-myAd-font-main
					margin-right 10px
					&:hover
						color $otc-myAd-font-main
				.ad-content-button-disable
					color $otc-myAd-button-disable
					background $otc-myAd-button-disable-bg
					&:hover
						color $otc-myAd-button-disable
				.check-button
					border 1px solid $otc-myAd-active
					color $otc-myAd-active
					&:hover
						color $colFFFF
				a
					display inline-block
					height 36px
					padding 0 14px
					border 1px solid $otc-myAd-border
					color $otc-myAd-font-main
					vertical-align middle
					line-height 36px
					margin-right 10px
					font-size 14px
	.my-ad-none
		height 420px
		line-height 540px
		text-align center
		font-size 14px
		letter-spacing 0
		background $empty-white no-repeat center / 140px 100px
		
		
		
	