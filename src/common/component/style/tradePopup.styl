.trade-popup
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  font-size 16px
  color $common-font-none
  letter-spacing 0
  z-index 99999
  //.positi
  //  color $common-font-none
  //  background-color $common-bg-main-op
  //.passive
  //  background-color $common-bg-negative-op
  .default
    position absolute
    min-width 240px
    min-height 70px
    line-height 70px
    border-radius(10px)
  .ico
    position absolute
    min-width 240px
    min-height 70px
    display flex
    align-items center
    //line-height 70px
    border-radius(10px)
    text-align left
    background #303543
    padding-left 72px
    padding-right 20px
    font-size 16px
    &::before
      position absolute
      left 24px
      top 0
      content ''
      width 30px
      height 100%
    &.positi
      &::before
        background $trade-pro-success no-repeat center center
        background-size 30px auto
    &.passive
      &::before
        background $trade-pro-error no-repeat center center
        background-size 30px auto