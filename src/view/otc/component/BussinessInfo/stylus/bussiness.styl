.otc-bussiness-info
	width 100%
	height 139px
	border-radius 2px
	box-shadow 0 0 4px 0 rgba(204, 204, 204, 0.50)
	background $colFFFF
	.info-base
		width 100%
		height 81px
		border-bottom 1px solid $otc-info-line
		display flex
		align-items center
		justify-content space-between
		padding 20px 24px
		.info-name
			img
				width 40px
				height 40px
				margin-right 20px
			span
				font-size 16px
				color $otc-info-font-main
		.info-detail
			display flex
			align-items center
			.info-detail-item
				margin-left 40px
				text-align center
				p
					font-size 14px
					color $otc-info-font-main
					margin-bottom 10px
				span
					font-size 12px
					color $otc-info-font-intro
	.info-regist
		width 100%
		height 57px
		padding 20px 24px
		display flex
		align-items center
		justify-content space-between
		.regitst-time
			span
				font-size 12px
				color $otc-info-font-intro
		.regist-status
			display flex
			align-items center
			.regist-status-items
				display flex
				align-items center
				margin-left 20px
				em
					width 12px
					height 12px
					display inline-block
					background $otc-status-unprof no-repeat center
					background-size 12px
					margin-right 5px
				span
					font-size 12px
					color $otc-info-font-intro
			.regist-status-prof
				em
					background $otc-status-prof no-repeat center
					background-size 12px
				span
					color $otc-info-font-main